# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.php]
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 100

[*.{js,css}]
indent_size = 2
indent_style = space
max_line_length = 120
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
